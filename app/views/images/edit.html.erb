<h2>会員情報</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table class="table">
 <tbody>
  <tr>
   <th>name</th>
   <th><%= @user.name %></th>
  </tr>

  <tr>
   <th>introduction</th>
   <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

 <% if !@user.guest_user? && @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
 <% end %>

 <% if @user == current_user %>
  <%= link_to "退会",user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
 <% end %>



<h2>新規投稿</h2>
<%= form_with model: @image do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Photo</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<h1>編集</h1>
<%= form_with model: @image do |f| %>
   <h4>Photo</h4>
   <%= f.file_field :image, accept: "image/*" %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Update Image' %>

   <%= link_to "Show", image_path(@image.id) %>|<%= link_to "Back", images_path %>
