<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= @user.errors.count %>件のエラーがあります</h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2 class="mb-4">プロフィール編集</h2>

<div class="card p-4 shadow-sm">
  <%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", id: "inputName", placeholder: "名前を入力" %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "自己紹介", class: "form-label" %>
      <%= f.text_field :introduction, class: "form-control", id: "inputIntroduction", placeholder: "一言紹介" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :is_public, class: "form-check-input" %>
      <%= f.label :is_public, "プロフィールを公開する", class: "form-check-label" %>
    </div>

    <%= f.submit "変更を保存", class: "btn btn-primary" %>
  <% end %>
</div>
