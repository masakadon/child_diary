<% if images.present? %>
  <div class="row">
    <% images.each do |image| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
          <% if image.image.attached? %>
            <%= link_to image_path(image) do %>
              <%= image_tag image.image.variant(resize_to_limit: [600, 300]).processed, class: "card-img-top" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to image.title, image_path(image), class: "text-decoration-none" %>
            </h5>
            <p class="card-text"><%= truncate(image.body, length: 100) %></p>
            <p class="text-muted small">投稿者：<%= link_to image.user.name, user_path(image.user) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>該当する投稿が見つかりませんでした。</p>
<% end %>
