<div class="d-flex justify-content-center mb-2">
 <%= render 'public/searches/form' %>
</div>

<%= render 'list', user: @user,image: @image %>

<% if @image.errors.any? %>
  <div class="alert alert-danger">
    <p><%= @image.errors.count %>件のエラーがあります：</p>
    <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>投稿一覧</h2>
<table class="table">
 <thead>
  <tr>
   <th>ユーザー</th>
   <th>タイトル</th>
   <th>コメント数</th>
  </tr>
 </thead>

 <tbody>
  <% @images.each do |image| %>
   <tr>
    <td>
      <%= link_to user_path(image.user) do %>
        <%= image_tag image.user.get_profile_image(50, 50), class: "rounded-circle mr-1" %>
        <%= image.user.name %>
      <% end %>
    </td>
    <td>
     <%= link_to image.title, image_path(image) %>
    </td>
    <td>
     <%= link_to "#{image.post_comments.count} コメント", image_path(image) %>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>


