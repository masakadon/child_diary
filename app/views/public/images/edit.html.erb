<% if @image.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= @image.errors.count %>件のエラーがあります：</strong>
    <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>投稿の編集</h1>

<% if @image.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= @image.errors.count %>件のエラーがあります：</strong>
    <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @image, local: true, html: { multipart: true } do |f| %>
  <div class="form-group">
    <h4>Photo</h4>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <h4>Title</h4>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-check">
   <%= f.check_box :is_published, { class: "form-check-input" } %>
   <%= f.label :is_published, "投稿を公開する", class: "form-check-label" %>
  </div>


  <div class="mt-3">
    <%= f.submit '変更を保存', class: "btn btn-primary" %>
    <%= link_to "投稿に戻る", image_path(@image), class: "btn btn-secondary ml-2" %>
    <%= link_to "一覧に戻る", images_path, class: "btn btn-light ml-2" %>
  </div>
<% end %>