<!-- app/views/admin/users/show.html.erb -->

<h1>会員詳細</h1>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>登録日</th>
    <td><%= l(@user.created_at, format: :long) %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= @user.status %></td>
  </tr>
</table>

<%= link_to '編集', edit_admin_user_path(@user) %>
<%= link_to '戻る', admin_users_path %>
